        <Label x:Name="LbVisit" Content="Visit : 6 Locations" Grid.Column="1" HorizontalAlignment="Left" Margin="12,120,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Poppins" FontSize="18" Width="250" Foreground="#FF5500A1" Height="32" FontWeight="Bold"/>
        <Label x:Name="LbAvailabe" Content="Available: 3 Current Tour" Grid.Column="1" HorizontalAlignment="Left" Margin="12,170,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Poppins" FontSize="18" Width="250" Foreground="#FF029519" Height="32" FontWeight="Bold"/>
        <Image Source="/GUI;component/Assets/icons/icon-minimize.png" HorizontalAlignment="Left" Height="20" Margin="75,25,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20"/>
        <Image Source="/GUI;component/Assets/icons/icon-close.png" HorizontalAlignment="Left" Height="20" Margin="75,75,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20"/>
        <Image Source="/GUI;component/Assets/icons/icon-clear.png" HorizontalAlignment="Left" Height="20" Margin="75,125,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20"/>
        <Image Source="/GUI;component/Assets/icons/icon_edit.png" HorizontalAlignment="Left" Height="20" Margin="75,175,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20"/>
    </Grid>
</Page>
