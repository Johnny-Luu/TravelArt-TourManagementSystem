<Page x:Class="GUI.Views.Pages.PageStatistic_Tour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GUI.Views.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      Background="Transparent"
      Title="PageStatistic_Staff" Height="590" Width="1280">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="85*"/>
			<ColumnDefinition Width="43*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.5*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		
		<!-- Revenue or Profit btn -->
		<Border
			Grid.Row="0"
			Grid.Column="0"
			CornerRadius="10" 
			Background="#EAF7FF"
			Padding="6"
			VerticalAlignment="Top"
			HorizontalAlignment="Right">
			<Grid Width="160" Height="30">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				
				<!-- Revenue btn -->
				<Border
					Name="BtnRevenue"
					CornerRadius="8" 
					Background="White"
					Style="{StaticResource ButtonHoverStyle}"
					MouseDown="BtnRevenue_OnMouseDown">
					<Label
						Name="TxtRevenue"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="#3CA1FF"
						Content="Revenue"/>
				</Border>
				
				<!-- Profit btn -->
				<Border
					Name="BtnProfit"
					Grid.Column="1"
					CornerRadius="8"
					Style="{StaticResource ButtonHoverStyle}" 
					MouseDown="BtnProfit_OnMouseDown">
					<Label
						Name="TxtProfit"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="#949494"
						Content="Profit"/>
				</Border>
				
			</Grid>
		</Border>
		
		<!--Tour ComboBox-->
		<Border
			Grid.Row="0"
			Grid.Column="1"
			CornerRadius="10" 
			BorderThickness="4" 
			BorderBrush="white"
			VerticalAlignment="Top"
			HorizontalAlignment="Center">
			<ComboBox
				Name="CbTour"
				Height="40"
				Width="330"
				Style="{StaticResource ComboBoxStyle}">
			</ComboBox>
		</Border>
		
		<!-- chart -->
		<Border 
			Grid.Column="0" 
			Grid.Row="1"
			Grid.RowSpan="3"
			Height="500"
			Margin="50.4,0,0,0"
			VerticalAlignment="Top" Width="800"
			HorizontalAlignment="Left"
			Background="White" 
			CornerRadius="20" 
			BorderThickness="0.3" 
			BorderBrush="white">
			
			<lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Bottom" >
			</lvc:CartesianChart>
		</Border>
		
		<!-- 3 Panel ben phai-->
		<Border 
			Grid.Column="1" 
			Grid.Row="2"
			Height="150"
			Margin="50.4,8,0,0"
			VerticalAlignment="Top" Width="330"
			HorizontalAlignment="Left"
			Background="White" 
			CornerRadius="20" 
			BorderThickness="0.3" 
			BorderBrush="white">
			
        
			<Border.Effect>
				<DropShadowEffect
					Color="Gray"
					BlurRadius="5"
					Opacity=".5"
					ShadowDepth="2" />
			</Border.Effect>
		<WrapPanel HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" VerticalAlignment="Top" Width="330" >
			
			<Rectangle  Height="90" Stroke="White" Width="90" Margin="30,30,0,30" RadiusX="20" RadiusY="20">
				<Rectangle.Fill>

					<ImageBrush ImageSource="/Assets/icons/moneyicon.png"/>

				</Rectangle.Fill>
			</Rectangle>
			<WrapPanel Height="150" Width="210">
				<Label Content="Network Profit" Width="170" HorizontalAlignment="Left" Margin="40,30,0,0" FontFamily="Poppins" FontSize="18" FontWeight="Bold" Foreground="#FF727272"/>
				<Label Name="LbProfit" Content="180000000" Height="48" Width="165" Margin="40,10,0,0" FontFamily="Poppins" FontWeight="Bold" FontSize="25" Foreground="#FF00CC2D"/>
			</WrapPanel>
			
		</WrapPanel>
			</Border>
		<Border 
			Grid.Column="1" 
			Grid.Row="1"
			Height="150"
			Margin="50.4,4,0,0"
			VerticalAlignment="Top" Width="330"
			HorizontalAlignment="Left"
			Background="White" 
			CornerRadius="20" 
			BorderThickness="0.3" 
			BorderBrush="white">
			
        
			<Border.Effect>
				<DropShadowEffect
					Color="Gray"
					BlurRadius="5"
					Opacity=".5"
					ShadowDepth="2" />
			</Border.Effect>
			<WrapPanel HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" VerticalAlignment="Top" Width="330" >
			<Rectangle  Height="90" Stroke="White" Width="90" Margin="30,30,0,30" RadiusX="20" RadiusY="20">
				<Rectangle.Fill>

					<ImageBrush ImageSource="/Assets/icons/renvenueicon.png"/>

				</Rectangle.Fill>
			</Rectangle>
			<WrapPanel Height="150" Width="210">
				<Label Content="Revenue" Width="170" HorizontalAlignment="Left" Margin="38,30,0,0" FontFamily="Poppins" FontSize="18" FontWeight="Bold" Foreground="#FF727272"/>
				<Label Name="LbRevenue" Content="12.255.260" Height="48" Width="165" Margin="40,10,0,0" FontFamily="Poppins" FontWeight="Bold" FontSize="25" Foreground="#FF3CA1FF"/>
			</WrapPanel>
			</WrapPanel>
			</Border>
		<Border 
			Grid.Column="1" 
			Grid.Row="3"
			Height="150"
			Margin="50.4,12,0,0"
			VerticalAlignment="Top" Width="330"
			HorizontalAlignment="Left"
			Background="White" 
			CornerRadius="20" 
			BorderThickness="0.3" 
			BorderBrush="white">
			
        
			<Border.Effect>
				<DropShadowEffect
					Color="Gray"
					BlurRadius="5"
					Opacity=".5"
					ShadowDepth="2" />
			</Border.Effect>
		<WrapPanel HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" VerticalAlignment="Top" Width="330" >
		<Rectangle  Height="90" Stroke="White" Width="90" Margin="30,30,0,30" RadiusX="20" RadiusY="20"> 
			<Rectangle.Fill>

				<ImageBrush ImageSource="/Assets/icons/cameraicon.png"/>

			</Rectangle.Fill>
		</Rectangle>
			<WrapPanel Height="150" Width="210">
				<Label Content="Quantity" Width="170" HorizontalAlignment="Left" Margin="40,30,0,0" FontFamily="Poppins" FontSize="18" FontWeight="Bold" Foreground="#FF727272"/>
				<Label Name="LbQuantity" Content="120" Height="48" Width="165" Margin="40,10,0,0" FontFamily="Poppins" FontSize="25" Foreground="#FF00FFD1" FontWeight="Bold"/>
			</WrapPanel>
		</WrapPanel>
			</Border>
	</Grid>

</Page>
